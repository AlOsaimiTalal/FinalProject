<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choose"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quotesObooks_bill">

    <androidx.cardview.widget.CardView
        android:id="@+id/BigCard3"
        android:layout_width="match_parent"
        android:layout_height="231dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="fill"
        android:layout_marginStart="4dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#1D03A9F4"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/description_gates"
                android:layout_width="172dp"
                android:layout_height="118dp"
                app:srcCompat="@drawable/bill_modified" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arbutus_slab"
                android:text=" Bill Gates, in full William Henry Gates III, (born October 28, 1955, Seattle, Washington, U.S.), American computer programmer and entrepreneur who cofounded Microsoft Corporation, the worldâ€™s largest personal-computer software company."
                android:textColor="@color/black"
                android:textColorHint="#03A9F4"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/background_dis" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="242dp"
        android:text="Gates's"
        android:textColor="#000000"
        android:textSize="40dp" />



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/textView2"
        android:columnCount="2"
        android:rowCount="1"


        >

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="9dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/buttonRecB"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/book_rec"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="recommendation books"
                    android:textColor="@color/black"
                    android:fontFamily="@font/arbutus_slab"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="9dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center_vertical|center_horizontal">

                <ImageView
                    android:id="@+id/QuotesB"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/quotes"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quotes"
                    android:textColor="@color/black"
                    android:fontFamily="@font/arbutus_slab"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>


    <ImageView
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/left_arrow" />


    <ImageView
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="-10dp"
        android:layout_marginLeft="240dp"
        android:src="@drawable/right_arrow" />




</RelativeLayout>