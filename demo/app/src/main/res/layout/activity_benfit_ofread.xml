<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BenfitOFread">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/arbutus_slab"
        android:text=" Benfits Of Reading"
        android:textColor="#369DEF"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/arbutus_slab"
        android:text="1. Reading Exercises the Brain.  "
        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/arbutus_slab"
        android:text="2. Reading Improves Concentration and the Ability to Focus."
        android:textColor="@color/black"
        android:textSize="22dp" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="3dp"
        android:fontFamily="@font/arbutus_slab"
        android:text="5. Reading Teaches Empathy."
        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="50dp"

        android:layout_marginEnd="9dp"
        android:fontFamily="@font/arbutus_slab"
        android:text="3. Reading Improves Literacy."
        android:textColor="@color/black"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/arbutus_slab"
        android:text="4. Reading Increases General Knowledge."
        android:textColor="@color/black"
        android:textSize="22dp" />
</RelativeLayout>